    .battlefield

      div
        input.clickzone.clickzone--p2(type="checkbox")
        input.clickzone.clickzone--p2(type="checkbox")
        input.clickzone.clickzone--p2(type="checkbox")
        input.clickzone.clickzone--p2(type="checkbox")

        .score-panel__bar.score-panel__bar--p1
        .score-panel__name.score-panel__name--p1 Weedle
        .score-panel__hp.score-panel__hp--p1
          | HP
          span.score-panel__counter--p1
          | 0/40
        .score-panel__arrow.score-panel__arrow--p1

      div
        input.clickzone.clickzone--p1(type="checkbox")
        input.clickzone.clickzone--p1(type="checkbox")
        input.clickzone.clickzone--p1(type="checkbox")
        input.clickzone.clickzone--p1(type="checkbox")

        .score-panel__bar.score-panel__bar--p2
        .score-panel__name.score-panel__name--p2 Gastly
        .score-panel__hp.score-panel__hp--p2
          | HP
          span.score-panel__counter--p2
          | 0/40
        .score-panel__arrow.score-panel__arrow--p2

      .p1
        .weedle
          .weedle__tail
          .weedle__body.weedle__body--7
          .weedle__body.weedle__body--6
          .weedle__body.weedle__body--5
          .weedle__body.weedle__body--4
          .weedle__body.weedle__body--3
          .weedle__body.weedle__body--2
          .weedle__body.weedle__body--1
          .weedle__head
            .weedle__eye.weedle__eye--left
            .weedle__eye.weedle__eye--right
            .weedle__nose
            .weedle__horn

      .p2
        .gastly
          .gastly__smoke
            .gastly__smoke__ring.gastly__smoke__ring1
            .gastly__smoke__ring.gastly__smoke__ring2
          .gastly__head
